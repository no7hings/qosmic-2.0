#usda 1.0
(
    defaultPrim = "{{ dcc.root_name }}"
    metersPerUnit = 0.01
    upAxis = "Y"
)

def Xform "{{ dcc.root_name }}" (
    assetInfo = {
        asset identifier = @{{ shot_asset }}.usda@
        string project = "{{ project }}"
        string role = "{{ role }}"
        string asset = "{{ asset }}"
        string step = "{{ step }}"
        string task = "{{ task }}"
        string version = "{{ version }}"
        string asset_shot = "{{ asset_shot }}"
        string shot_asset = "{{ shot_asset }}"
    }
    kind = "component"
    prepend payload = @{{ usdas.payload }}@
)
{
    asset userProperties:identifier = @{{ shot_asset }}.usda@
}