#usda 1.0
(
    defaultPrim = "{{ dcc.root_name }}"
    metersPerUnit = 0.01
    upAxis = "Y"
    startTimeCode = {{ start_frame }}
    endTimeCode = {{ end_frame }}
)

over "{{ dcc.root_name }}" (
    assetInfo = {
        asset identifier = @{{ asset }}.usda@
        string project = "{{ project }}"
        string role = "{{ role }}"
        string asset = "{{ asset }}"
        string step = "{{ step }}"
        string task = "{{ task }}"
        string version = "{{ version }}"
    }
    kind = "component"
    prepend references = [
        @{{ usdas.material }}@,
        # @{{ usdas.geo_extra }}@,
        @{{ usdas.geo_map }}@,
    ]
    # payload = @{{ usdas.payload }}@
)
